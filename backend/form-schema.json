[
  {
    "id": "full_name",
    "type": "text",
    "label": "Full Name",
    "placeholder": "Enter your full name",
    "required": true,
    "validation": {
      "minLength": 2,
      "maxLength": 50,
      "regex": "^[a-zA-Z\\s]*$"
    }
  },
  {
    "id": "email",
    "type": "text",
    "label": "Email Address",
    "placeholder": "john@example.com",
    "required": true,
    "validation": {
      "regex": "^[^\\s@]+@[^\\s@]+\\.[^\\s@]+$"
    }
  },
  {
    "id": "age",
    "type": "number",
    "label": "Age",
    "placeholder": "18-65",
    "required": true,
    "validation": {
      "min": 18,
      "max": 65
    }
  },
  {
    "id": "department",
    "type": "select",
    "label": "Department",
    "options": [
      { "value": "hr", "label": "Human Resources" },
      { "value": "eng", "label": "Engineering" },
      { "value": "mkt", "label": "Marketing" }
    ],
    "required": true
  },
  {
    "id": "skills",
    "type": "multi-select",
    "label": "Skills",
    "options": [
      { "value": "react", "label": "React" },
      { "value": "node", "label": "Node.js" },
      { "value": "go", "label": "Go" },
      { "value": "sql", "label": "SQL" }
    ],
    "required": false,
    "validation": {
      "minSelected": 1,
      "maxSelected": 5
    }
  },
  {
    "id": "joining_date",
    "type": "date",
    "label": "Joining Date",
    "required": true,
    "validation": {
      "minDate": "2024-01-01"
    }
  },
  {
    "id": "bio",
    "type": "textarea",
    "label": "Short Bio",
    "placeholder": "Tell us about yourself...",
    "required": false,
    "validation": {
      "maxLength": 200
    }
  },
  {
    "id": "terms",
    "type": "switch",
    "label": "I agree to terms",
    "required": true
  }
]
